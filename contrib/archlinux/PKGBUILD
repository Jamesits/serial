#source=("$url/$pkgname-$pkgver.tar.gz")
source=("source.tar.xz")
sha256sums=('1337deadbeef')

prepare(){
  # cd "$pkgname-$pkgver"
  mkdir -p build/
}

build() {
  # cd "$pkgname-$pkgver"
  bash ./contrib/build/build.sh
}

check() {
  # cd "$pkgname-$pkgver"
  # go test ./...
}

package() {
  # cd "$pkgname-$pkgver"
  install -Dm755 build/$pkgname "$pkgdir"/usr/bin/$pkgname
}
